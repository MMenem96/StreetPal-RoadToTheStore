<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".forgotpassword.ForgotPasswordAcivity2">


        <RelativeLayout
            android:id="@+id/upperLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:minHeight="40dp"
            android:padding="10dp">

            <com.sharekeg.streetpal.TextViewForEnglish
                android:id="@+id/activity_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/forget2_activity_title"
                android:textColor="@color/title_color"
                android:textSize="@dimen/text_size" />


        </RelativeLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/upperLayout"
            android:layout_gravity="center_vertical"
            android:background="@color/nav_base_line" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator"
            android:layout_marginTop="20dp">


            <ImageView
                android:id="@+id/ivForgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_update_pass" />


            <com.sharekeg.streetpal.TextViewForEnglish
                android:id="@+id/tvHintForResetPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivForgetPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/fill_your_details"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size" />

            <com.sharekeg.streetpal.EditTextForEnglish
                android:id="@+id/etCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHintForResetPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/black_stroke"
                android:gravity="start"
                android:hint="@string/etCode_for_resetPassword"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/confirmation_controls_hint"
                android:textSize="@dimen/text_size" />

            <com.sharekeg.streetpal.EditTextForEnglish
                android:id="@+id/etUserId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etCode"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/black_stroke"
                android:gravity="start"
                android:hint="@string/username"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/confirmation_controls_hint"
                android:textSize="@dimen/text_size" />

            <com.sharekeg.streetpal.EditTextForEnglish
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etUserId"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginStart="40dp"

                android:layout_marginTop="15dp"
                android:background="@drawable/black_stroke"
                android:gravity="start"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/confirmation_controls_hint"
                android:textSize="@dimen/text_size" />

            <com.sharekeg.streetpal.EditTextForEnglish
                android:id="@+id/etConfirmNewPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etNewPassword"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"

                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/black_stroke"
                android:gravity="start"
                android:hint="@string/confirm_new_password"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/confirmation_controls_hint"
                android:textSize="@dimen/text_size" />

            <com.sharekeg.streetpal.ButtonForEnglish
                android:id="@+id/btnUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etConfirmNewPassword"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/corner_button"
                android:padding="10dp"
                android:text="@string/update"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />

            <com.sharekeg.streetpal.ButtonForEnglish
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnUpdate"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/black_corner_button"
                android:padding="10dp"
                android:text="@string/cancel_button"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size" />


        </RelativeLayout>
    </RelativeLayout>
</ScrollView>