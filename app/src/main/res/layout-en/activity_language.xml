<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sharekeg.streetpal.Settings.LanguageActivity">

    <RelativeLayout
        android:id="@+id/TV_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/login_button_bg"
        android:minHeight="40dp"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/cancel_action"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:background="@drawable/ripple_effect"
            android:padding="5dp"
            android:src="@drawable/back_icon"
            android:textColor="@color/white" />


        <com.sharekeg.streetpal.langutil.TextViewForEnglish
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/language"
            android:textAllCaps="true"
            android:textColor="@color/white" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TV_language">


        <RelativeLayout
            android:id="@+id/enLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white">

            <com.sharekeg.streetpal.langutil.TextViewForEnglish
                android:id="@+id/english"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image"
                android:layout_alignTop="@+id/image"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/image"
                android:background="@color/white"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="@string/english"

                />

            <com.sharekeg.streetpal.langutil.TextViewForEnglish
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/english"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="@string/united_kingdom"
                android:textColor="@color/login_controls_hint"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/english1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/arLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enLayout"
            android:layout_marginTop="5dp"
            android:background="@color/white">

            <com.sharekeg.streetpal.langutil.TextViewForEnglish
                android:id="@+id/arabic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/image"
                android:layout_alignTop="@+id/image"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@+id/image"
                android:background="@color/white"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="@string/arabic"

                />

            <com.sharekeg.streetpal.langutil.TextViewForEnglish
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/arabic"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:text="@string/egypt"
                android:textColor="@color/login_controls_hint"
                android:textSize="13dp" />

            <ImageView
                android:id="@+id/arabic1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
