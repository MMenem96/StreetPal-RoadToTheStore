<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="2dp"
    tools:context="com.sharekeg.streetpal.Registration.ConfirmationActivity">

    <RelativeLayout
        android:id="@+id/upperBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.sharekeg.streetpal.TextViewForArabic
            android:id="@+id/tvconfirmation"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/confrim_title"
            android:textColor="#000"
            android:textSize="@dimen/text_size" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/tvconfirmation"
            android:layout_gravity="center_vertical"
            android:background="@color/nav_base_line" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">


        <com.sharekeg.streetpal.EditTextForArabic
            android:id="@+id/ET_Code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV_Confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:gravity="right"
            android:hint="@string/EditTxt"
            android:textColor="@color/black"
            android:textColorHint="@color/confirmation_controls_hint"
            android:textSize="@dimen/text_size" />

        <com.sharekeg.streetpal.TextViewForArabic
            android:id="@+id/TimerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TV_Confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="@color/black" />

        <Chronometer
            android:id="@+id/chrono"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/TV_Confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="160dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/IV_confirm"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:background="@drawable/ic_confirm_icon" />

        <com.sharekeg.streetpal.TextViewForArabic
            android:id="@+id/tv_welcome_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IV_confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Welcome Nasser !"
            android:textColor="@color/Green"
            android:textSize="@dimen/text_size" />

        <com.sharekeg.streetpal.ButtonForArabic
            android:id="@+id/btn_Submit"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/ET_Code"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/corner_button"
            android:text="@string/btn1"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <com.sharekeg.streetpal.ButtonForArabic
            android:id="@+id/btn_ResendCode"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/btn_Submit"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/black_corner_button"
            android:text="@string/btn2"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <com.sharekeg.streetpal.TextViewForArabic
            android:id="@+id/TV_Confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/IV_confirm"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="@string/TxtView"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size" />


        <com.sharekeg.streetpal.TextViewForArabic
            android:id="@+id/tvEditYourEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/btn_ResendCode"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/typed_wrong_email"
            android:textColor="@color/dark_blue_message_chat" />

    </RelativeLayout>
</RelativeLayout>


