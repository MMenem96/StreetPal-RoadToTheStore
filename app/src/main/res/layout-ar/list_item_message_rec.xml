<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f1f1f1">
    <!--Card view for the StreetPal guide-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1f1f1"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1f1f1"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/logo_street_pal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_message_street_pal" />

            <com.sharekeg.streetpal.langutil.TextViewForArabic
                android:id="@+id/tvmessage_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/logo_street_pal"
                android:background="@drawable/messageshape"
                android:padding="14dp"
                android:text="Hi, Mohamed i'm your streetPal guide."
                android:textColor="@color/white"
                android:textSize="12sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f1f1f1"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:paddingTop="1dp"
            android:paddingBottom="1dp">


            <com.sharekeg.streetpal.langutil.TextViewForArabic
                android:id="@+id/tvmessage_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/message_shape2"
                android:padding="14dp"
                android:text="Hi, Mohamed i'm your StreetPal guide."
                android:textColor="@color/white"
                android:textSize="12sp" />


        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>