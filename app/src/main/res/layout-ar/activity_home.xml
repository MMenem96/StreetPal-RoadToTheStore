<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.sharekeg.streetpal.Home.HomeActivity">

    <LinearLayout
        android:id="@+id/UpperBarlayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_activity_bar_color"
        android:minHeight="40dp"
        android:orientation="horizontal"
        android:padding="10dp">


        <ImageButton
            android:id="@+id/ivSettings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ripple_effect"
            android:padding="6dp"
            android:src="@drawable/ic_settings_img" />

        <com.sharekeg.streetpal.langutil.TextViewForArabic
            android:id="@+id/tvHomeTitle_typing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/Home_title_name_typing"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_title_typing"
            android:visibility="gone" />

        <com.sharekeg.streetpal.langutil.TextViewForArabic
            android:id="@+id/tvHomeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/Home_title_name"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size" />

        <ImageButton
            android:id="@+id/ivSettingss"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ripple_effect"
            android:padding="6dp"
            android:src="@drawable/ic_settings_img"
            android:visibility="invisible" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/rlFragments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlbtns"
        android:layout_below="@+id/UpperBarlayoutId"
        android:background="@color/white">

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlbtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/black_borders">

        <RelativeLayout
            android:id="@+id/llbtns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivhome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/ic_home_or" />

            <ImageView
                android:id="@+id/ivmap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_map" />

            <ImageView
                android:id="@+id/ivguide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/ic_guide" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>
